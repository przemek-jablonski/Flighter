<?xml version="1.0" encoding="utf-8"?>
<com.android.szparag.flighter.flightsbrowser.views.FlighterFlightsBrowserView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/screen_flights_browser_airport_header"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="22dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:background="@android:color/white"
      android:fontFamily="@font/duru_sans"
      android:gravity="center"
      android:maxLines="1"
      android:text="Select Departure"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <EditText
      android:id="@+id/screen_flights_browser_departure_date_edittext"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@android:color/white"
      android:ems="10"
      android:inputType="date"
      app:layout_constraintEnd_toStartOf="@+id/screen_flights_browser_arrival_date_edittext"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="@+id/screen_flights_browser_airport_header"
      app:layout_constraintTop_toBottomOf="@+id/screen_flights_browser_airport_header"
      />
  <EditText
      android:id="@+id/screen_flights_browser_arrival_date_edittext"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:background="@android:color/white"
      android:ems="10"
      android:inputType="date"
      app:layout_constraintEnd_toEndOf="@+id/screen_flights_browser_airport_header"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/screen_flights_browser_departure_date_edittext"
      app:layout_constraintTop_toBottomOf="@+id/screen_flights_browser_airport_header"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/screen_flights_browser_flights_recycler"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/screen_flights_browser_departure_date_edittext"
      app:layout_constraintVertical_bias="0.0"
      tools:listitem="@layout/view_flights_browser_row_flight"
      />


</com.android.szparag.flighter.flightsbrowser.views.FlighterFlightsBrowserView>